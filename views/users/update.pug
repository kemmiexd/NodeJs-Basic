extends ../layouts/kemmie.pug

block content

    h1 Update

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/update", method="POST")

        input(class="form-control" name="id", type="hidden" value=user.id ? user.id : "" )

        .form-group
            label Name
            input(class="form-control" name="name", type="text" value=user.name ? user.name : "")
        .form-group
            label Phone
            input(class="form-control" name="phone", type="text" value=user.phone ? user.phone : "")
        .form-group
            label Email
            input(class="form-control" name="email", type="text" value=user.email ? user.email : "")
        .form-group
            label Password
            input(class="form-control" name="password", type="text" value=user.password ? user.password : "")

        button(class="btn btn-primary") Update