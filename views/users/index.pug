extends ../layouts/kemmie.pug

block content
        h1 User List
        form(action="/users/search", method="GET")
            input(class="form-control" type="text", name="q")
            button Search
        br
        br
        table.table
            tr
                th Name
                th Phone
                th Action


            each user in users
                tr
                    td=user.name
                    td=user.phone
                    td
                        a.btn.btn-light(href="/users/" + user.id) View

        a(class="btn btn-primary" href="/users/create") Create
