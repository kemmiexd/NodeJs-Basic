extends ../layouts/kemmie.pug

block content

    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login", method="POST")
        .form-group
            label Email
            input(class="form-control" name="email", type="text" value=values ? values.email : "")
        .form-group
            label Password
            input(class="form-control" name="password", type="text" value=values ? values.password : "")

        button(class="btn btn-primary") Login